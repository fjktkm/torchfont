{
	"name": "uv",
	"image": "ghcr.io/astral-sh/uv:debian",
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {
			"username": "none"
		}
	},
	"hostRequirements": {
		"gpu": "optional"
	},
	"mounts": [
		{
			"source": "uv-cache",
			"target": "/root/.cache/uv",
			"type": "volume"
		},
		{
			"target": "${containerWorkspaceFolder}/.venv",
			"type": "volume"
		},
		{
			"source": "torchfont-datasets",
			"target": "${containerWorkspaceFolder}/data",
			"type": "volume"
		}
	],
	"postCreateCommand": "uv sync --all-extras",
	"customizations": {
		"vscode": {
			"extensions": [
				"charliermarsh.ruff",
				"ms-azuretools.vscode-docker",
				"ms-python.python",
				"ms-toolsai.jupyter",
				"tamasfe.even-better-toml"
			]
		}
	}
}
